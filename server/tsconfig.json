{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "outDir": "../dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "mongoose", "dotenv"],
    "typeRoots": ["../node_modules/@types"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
} 